<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="@dimen/margin_4dp"
    android:layout_marginBottom="@dimen/margin_4dp"
    android:paddingBottom="12dp">

    <com.arp.mynikestore.view.NikeImageView
        android:id="@+id/iv_product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewAspectRatio="1.1"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_product_image"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:layout_marginEnd="@dimen/margin_16_dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:textAppearance="@style/TextAppearance.Reply.Body1"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_product_previous_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_title"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.Reply.Body2"
        android:textColor="?android:textColorSecondary"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_product_current_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_previous_price"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.Reply.Body1"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/btn_product_item_favorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_favorite"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_favorites" />

</RelativeLayout>